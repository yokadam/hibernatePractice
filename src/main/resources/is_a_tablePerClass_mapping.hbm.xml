<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.examples.IS_A_REALTIONSHIP.model.CompanyEmployee" table="employee">
        <id name="id" >
            <generator class="increment"></generator>
        </id>

        <!--very important descrimator column after id field-->
        <discriminator column="e_type"></discriminator>

        <property name="name"></property>
        <property name="email"></property>
        <property name="salary"></property>

        <!-- sub classses-->
        <subclass name="org.examples.IS_A_REALTIONSHIP.model.SoftwareCompanyEmployee" discriminator-value="se">
            <property name="tools"></property>
        </subclass>

        <subclass name="org.examples.IS_A_REALTIONSHIP.model.HardwareCompanyEmployee" discriminator-value="he">
            <property name="workingHours"></property>
        </subclass>

        <subclass name="org.examples.IS_A_REALTIONSHIP.model.Admin" discriminator-value="admin">
            <property name="department"></property>
        </subclass>

    </class>

</hibernate-mapping>