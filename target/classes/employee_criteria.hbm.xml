<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.examples.model.Employee_Criteria" table="employee_criteria">
        <id name="id" column="o_id">
            <generator class="increment"/>
        </id>
        <property name="name" column="o_name"/>
        <property name="departemnt" column="o_departemnt"/>
        <property name="salary" column="o_salary"/>

    </class>

</hibernate-mapping>