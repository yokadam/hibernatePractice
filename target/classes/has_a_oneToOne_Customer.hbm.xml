<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.examples.HAS_A_OneToOne.Customer" table="customer">
        <id name="cId" >
            <generator class="increment"></generator>
        </id>

        <property name="name"/>

        <one-to-one name="address" class="org.examples.HAS_A_OneToOne.Address">
        </one-to-one>

    </class>

</hibernate-mapping>